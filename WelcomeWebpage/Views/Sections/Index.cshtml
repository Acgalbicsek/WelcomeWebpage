@model IEnumerable<WelcomeWebpage.Models.InfoSection>
<h2>Website Sections</h2>
<p class="text-muted">Click Edit to update the content shown on your site.</p>

<table class="table">
    <thead>
        <tr><th>Title</th><th>Slug</th><th>Visible</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Title</td>
                <td>@s.Slug</td>
                <td>@(s.IsVisible ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-slug="@s.Slug">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="AdminInfo" asp-action="Index" class="btn btn-secondary">← Back to Admin</a>